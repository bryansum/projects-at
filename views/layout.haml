!!!
%html(lang='en')
  %head
    %meta(http-equiv="content-type" content='text/html; charset=utf-8')
    %title 
      Projects@
      = "&laquo; " + @title if @title
    %link(rel='stylesheet' href='/main.css' type='text/css')
  %body
    #container
      #header
        %a(href='/')
          %img#logo(src='/img/logo.png')
        %form#search(action='/search' method='get')
          %p
            %input(type='search' name='q' results=5 placeholder='Search projects...' autocomplete='off')
      #content-container
        #left-nav
          #links
            %a.link{:href=>"/add"} Add a project
            %a.link{:href=>"/all"} Explore
          .proj-list
            
          .side
            %h3 popular tags:
            = tag_list(Tag.popular)
            %h3 popular projects:
            - for p in Project.popular
              = proj_link(p)
        #content
          = yield
      #footer
        == &copy; #{Time.now.year} Bryan Summersett. Source available on #{link 'Github', 'http://github.com'}.
  %script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" type='text/javascript' charset='utf-8')
  %script(src='/main.js' type='text/javascript' charset='utf-8')

