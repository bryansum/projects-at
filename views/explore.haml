%h1 Explore projects

%ul#proj-listing
  - for proj in @projs
    %li.proj
      %a.icon{:href=>"/proj/"+URI::escape(proj.name),:style=>"background:url('#{proj.icon || "http://dummyimage.com/60x60/000/fff"}')"}
      .details
        %h2.name= proj_link(proj)
        %span.summary&= proj.summary
        %span.authors&= proj.authors
